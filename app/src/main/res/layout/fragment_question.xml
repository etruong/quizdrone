<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".question">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_header"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="TextView"
            android:layout_width="237dp"
            android:layout_height="48dp"
            android:id="@+id/question_container" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/question_header" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <RadioGroup
            android:layout_width="240dp"
            android:layout_height="123dp"
            android:id="@+id/choices"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/question_container">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/choice1" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/choice2" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/choice3" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/choice4" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="Submit Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/choices"/>
</android.support.constraint.ConstraintLayout>